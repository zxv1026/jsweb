extends ../layout

block content 
    .global
        .container-fluid.cm-container-white
            .row.cm-fix-height
                h2.page-header 添加分类

                if errors && errors.length
                    div.errors
                        each error in errors
                            p.alert.alert-danger= error.msg
                
                form.vertical-form(method="post", action=action)
                    .form-group
                        label(for="title")  名称
                        input.form-control.input-lg(name="name", required="true",placeholder="请输入标题...",value=category.name)

                    button.btn.btn-lg.btn-info(type="submit")= post ? "保存修改" : "添加分类"  

block script