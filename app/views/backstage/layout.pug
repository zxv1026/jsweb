extends ../layout

append css
    link(rel='stylesheet', href='/css/backstage/normalize.css')
    link(rel='stylesheet', href='/css/backstage/small-n-flat.css')
    link(rel='stylesheet', href='/css/backstage/font-awesome.min.css')
    link(rel='stylesheet', href='/css/backstage/material-design.css')
    link(rel='stylesheet', href='/css/backstage/roboto.css')
    link(rel='stylesheet', href='components/font-awesome/css/font-awesome.css')
append js
    script(src='/js/backstage/normalize.js')
    script(src='/js/backstage/jquery.cookie.min.js')
    script(src='/js/backstage/jquery.mousewheel.min.js')
block main
    body.cm-no-transition.cm-1-navbar
    #cm-menu
      nav.cm-navbar.cm-navbar-primary
        .cm-flex
          a.cm-logo(href='/')
        .btn.btn-primary.md-menu-white(data-toggle='cm-menu')
      #cm-menu-content
        #cm-menu-items-wrapper
          #cm-menu-scroller
            ul.cm-menu-items
              li.active
                a.sf-house(href='/backstage') 主页
              li
                a.sf-ac(href='/backstage/posts/list') 文章列表
              li
                a.sf-ad(href='/backstage/posts/add') 添加文章
              li
                a.sf-cl(href='/backstage/categories/list') 分类列表
              li
                a.sf-addtc(href='/backstage/categories/add') 添加分类
              li
                a.sf-lock-open(href='/backstage/users/password') 修改密码
    header#cm-header
      nav.cm-navbar.cm-navbar-primary
        .btn.btn-primary.md-menu-white.hidden-md.hidden-lg(data-toggle='cm-menu')
        .cm-flex
          h1 主页
          form#cm-search(action='/', method='get')
            input(type='search', name='q', autocomplete='off', placeholder='Search...')
        .pull-right
          #cm-search-btn.btn.btn-primary.md-search-white(data-toggle='cm-search')
        .dropdown.pull-right
          button.btn.btn-primary.md-account-circle-white(data-toggle='dropdown')
          ul.dropdown-menu
            li.disabled.text-center
              a(style='cursor:default;')
                strong V
            li.divider
            li
              a(href='#')
                i.fa.fa-fw.fa-user
                |  Profile
            li
              a(href='#')
                i.fa.fa-fw.fa-cog
                |  Settings
            li
              a(href='/bcakstage/users/logout')
                i.fa.fa-fw.fa-sign-out
                |  &nbsp;Sign out
    footer.cm-footer
        span.pull-left jsweb
        span.pull-right © 2018
        block content