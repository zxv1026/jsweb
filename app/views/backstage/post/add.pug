extends ../layout

block content 
    .global
        .container-fluid.cm-container-white
            .row.cm-fix-height
                h2.page-header 添加文章
                
                if errors && errors.length
                    div.errors
                        each error in errors
                            p.alert.alert-danger= error.msg
                
                form.vertical-form(method="post", action="/backstage/posts/add")
                    .form-group
                        label(for="title")  标题
                        input.form-control.input-lg(name="title", required="true",placeholder="请输入标题...")
                    .form-group
                        label(for="category")   分类
                        select.form-control.input-lg(name="category", required="true")
                            option(value="",selected=true)  -  选择分类 -
                            each category in categories
                                option(value=category._id)= category.name
                    .form-group
                        label(for="content") 内容
                        textarea#js-post-content.form-control(name="content", required="true")

                    button.btn.btn-lg.btn-info(type="submit")= post ? "保存修改" : "发布文章"          

block script
    script(src="/js/ckeditor/ckeditor.js")
    script(src="/js/backstage/post.js")